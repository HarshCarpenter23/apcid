generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  password    String
  role        Role      @default(USER)
  hallticket  String    @unique
  isSubmitted Boolean   @default(false)
  submittedAt DateTime?
  logedInAt   DateTime?
  examslot    String
  examdate    String
  examroom    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  submissions Submission[]
  excelFiles  excelFile[]
  wordFiles   wordFile[]
  pptFiles    pptFile[]
  textFiles   textFile[]
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model Submission {
  id             String   @id @default(cuid())
  userId         String   @unique
  mergedPdfUrl   String?
  textSubmitted  Boolean  @default(false)
  filesSubmitted Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model excelFile {
  id        String   @id @default(cuid())
  userId    String
  oexcelurl String
  pexcelurl String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model wordFile {
  id        String   @id @default(cuid())
  userId    String
  owordurl  String
  pwordurl  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model pptFile {
  id        String   @id @default(cuid())
  userId    String
  oppturl   String
  pppturl   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model textFile {
  id          String   @id @default(cuid())
  userId      String   @unique
  otexturl    String
  ptexturl    String
  typingspeed Int
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model QuestionPaper {
  id       String @id @default(cuid())
  fileUrl  String
  examslot String
  examdate String
  otp      String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
