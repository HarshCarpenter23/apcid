generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  password    String
  role        Role      @default(USER)
  hallticket  String    @unique
  isSubmitted Boolean   @default(false)
  submittedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Submission {
  id          String @id @default(cuid())
  userId      String @unique
  oexcelurl   String
  owordurl    String
  oppturl     String
  otexturl    String
  mergedurl   String
  pexcelurl   String
  pwordurl    String
  pppturl     String
  ptexturl    String
  typingspeed Int
}
