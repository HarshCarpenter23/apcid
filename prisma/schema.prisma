generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  hallticket  String       @unique
  dob         String // Date of birth stored as string in YYYY-MM-DD format
  role        Role         @default(USER)
  isSubmitted Boolean      @default(false)
  isLoggedIn  Boolean      @default(false)
  submittedAt DateTime?
  logedInAt   DateTime?
  examslot    String
  examdate    String
  examroom    String
  ipAddress   String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  submissions Submission[]
  excelFiles  excelFile[]
  wordFiles   wordFile[]
  pptFiles    pptFile[]
  textFiles   textFile[]
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model Submission {
  id             String   @id @default(cuid())
  userId         String   @unique
  mergedPdfUrl   String?
  textSubmitted  Boolean  @default(false)
  filesSubmitted Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id])
}

model excelFile {
  id        String   @id @default(cuid())
  userId    String
  oexcelurl String
  pexcelurl String
  score     Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model wordFile {
  id        String   @id @default(cuid())
  userId    String
  owordurl  String
  pwordurl  String
  score     Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model pptFile {
  id        String   @id @default(cuid())
  userId    String
  oppturl   String
  pppturl   String
  score     Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model textFile {
  id          String   @id @default(cuid())
  userId      String   @unique
  otexturl    String
  ptexturl    String
  typingspeed Int
  score       Float
  typingScore Float
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model QuestionPaper {
  id        String   @id @default(cuid())
  fileUrl   String
  examslot  String
  examdate  String
  password  String   @unique
  display   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
